{
	"rules": {
		"indent": [2, "tab"], // indent with tabs
		"quotes": [2, "single"], // always use single quotes
		"linebreak-style": [2, "unix"], // fuck windows
		"semi": [2, "always"], // always use semicolons at end of command
		"no-multiple-empty-lines": [2, {"max": 2}], // only allow one free line
		"eqeqeq": [2, "smart"], // always use === only if null or something not ... I forgot
		"strict": [2, "function"],
		"no-var": [2],
		 max-len: ["error", 200, 4]
	},
	"ecmaFeatures": {
		"modules": true
	},
	"globals": {
		"document": true,
		"window": true,
		"require": true,
		"module": true
	},
	"env": {
		"es6": true,
		"browser": true,
		"jasmine": true
	},
	//"extends": "eslint:recommended",
	"extends": "airbnb",
	"parser": "babel-eslint" // we need to use this since ESLint does not support ES6 Decorators
}
